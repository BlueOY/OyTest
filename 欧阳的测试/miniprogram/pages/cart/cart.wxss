/* miniprogram/pages/cart/cart.wxss */
page{
}

.list{
  padding-bottom: 40px;
  /* -webkit-overflow-scrolling: auto; */

  position: relative;
}
.nodata{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  /* -webkit-transform: translate(-50%, -50%); */
  /* transform: translate(-50%, -100%); */
  
  text-align: center;
}
.nodata image{
  width: 60px;
}
.nodata text{
  display: block;
  font-size: 12px;
  color: #8a8a8a;
}
.item{
  padding: 15px 15px;
  position: relative;
  background: white;
  /* border-bottom: 0.5px solid #ccc; */
  margin-bottom: 7px;
}
.item checkbox-group{
  display: inline-block;
  vertical-align: middle;
}
.item image{
  width: 45px;
  vertical-align: middle;
  margin-left: 5px;
}
.item .right{
  display: inline-block;
  vertical-align: top;
  margin-left: 10px;
}
.item .right > text{
  display: block;
}
.item .right > text.name{
  font-size: 14px;
}
.item .right > text.price{
  font-size: 12px;
  color: var(--weui-FG-2);
}
.item .num-box{
  position: absolute;
  right: 10px;
  bottom: 10px;
}
.item .num-box text{
  display: inline-block;
  color: #ccc;
  font-size: 14px;
}
.item .num-box .symbols{
  padding: 0px 3px;
  border: 0.5px solid #ccc;
}
.item .num-box .num{
  padding: 0px 10px;
  border-top: 0.5px solid #ccc;
  border-bottom: 0.5px solid #ccc;
}

.foot{
  position: fixed;
  bottom: 0;
  width: calc(100% - 30px);
  display: inline-block;
  background: white;
  padding: 10px 15px;
  border-top: 0.5px solid #ccc;
}
.foot checkbox-group{
  display: inline-block;
}
.foot .right{
  float: right;
}
.foot .right text{
  vertical-align: middle;
}
.foot .right button{
  display: inline-block;
  vertical-align: middle;
  background: #FB760F;
  color: white;
  width: auto;
  min-height: 0;
  padding: 3px 10px;
  font-size: 14px;
  margin-left: 10px;
}