/* miniprogram/pages/dynamic/dynamic.wxss */
page {
  background: #f6f6f6;
}
.item{
  background: white;
  padding: 10px 15px;
}
.item:not(:last-child){
  margin-bottom: 10px;
}
.title image{
  display: inline-block;
  vertical-align: middle;
  width: 35px;
  height: 35px;
}
.title .text-box{
  display: inline-block;
  vertical-align: middle;
  margin-left: 15px;
}
.title .text-box text{
  display: block;
}
.title .text-box .name{
  font-size: 14px;
}
.title .text-box .time{
  font-size: 12px;
}
.content{
  margin-top: 7px;
}
.content text{
  font-size: 13px;
}
.content image{
  width: 50%;
  display: block;
  margin-top: 5px;
}
.product{
  background: #efefef;
  margin-top: 10px;
  padding: 5px;
  position: relative;
}
.product image{
  width: 45px;
  margin: 5px;
  vertical-align: middle;
}
.product .text-box{
  display: inline-block;
  vertical-align: middle;
  margin-left: 5px;
}
.product .text-box text{
  display: block;
  font-size: 12px;
}
.product .text-box .name{
  color: #3B3B3B;
}
.product .text-box .price{
  color: #DE8027;
}
.product .buy{
  position: absolute;
  right: 15px;
  bottom: 10px;
  background: #FB760F;
  color: white;
  padding: 1px 12px;
  font-size: 12px;
  border-radius: 20px;
}
.link{
  background: #efefef;
  margin-top: 10px;
  padding: 5px;
  position: relative;
}
.link image{
  width: 45px;
  margin: 5px;
  vertical-align: middle;
}
.link .text-box{
  display: inline-block;
  vertical-align: middle;
  margin-left: 5px;
}
.link .text-box text{
  display: block;
  font-size: 12px;
}
.link .text-box .name{
  color: #3B3B3B;
  font-size: 14px;
}
.link .text-box .url{
  color: #8C8C8C;
}
.link .jump{
  position: absolute;
  right: 15px;
  bottom: 10px;
  background: #FB760F;
  color: white;
  padding: 1px 12px;
  font-size: 12px;
  border-radius: 20px;
}
.foot{
  margin-top: 5px;
}
.foot image{
  margin: 5px;
  vertical-align: middle;
}
.foot .like{
  width: 17px;
  margin-top: 6px;
}
.foot .comment{
  width: 20px;
}

.nodata{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%); */
  transform: translate(-50%, -100%);
  
  text-align: center;
}
.nodata image{
  width: 60px;
}
.nodata text{
  display: block;
  font-size: 12px;
  color: #8a8a8a;
}
.loading{
  text-align: center;
  padding-top: 10px;
  padding-bottom: 15px;
  font-size: 14px;
  color: #8a8a8a;
}