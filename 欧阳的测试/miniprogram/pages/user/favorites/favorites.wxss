/* miniprogram/pages/user/favorites/favorites.wxss */
.nodata{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%); */
  transform: translate(-50%, -100%);
  
  text-align: center;
}
.nodata image{
  width: 60px;
}
.nodata text{
  display: block;
  font-size: 12px;
  color: #8a8a8a;
}
.loading{
  text-align: center;
  padding-top: 10px;
  padding-bottom: 15px;
  font-size: 14px;
  color: #8a8a8a;
}

.item{
  padding: 10px 5px;
  position: relative;
  background: white;
  /* border-bottom: 0.5px solid #ccc; */
  margin-bottom: 3px;
}
.item image{
  width: 55px; height: 40px;
  vertical-align: middle;
  margin-left: 5px;
}
.item .right{
  display: inline-block;
  vertical-align: top;
  margin-left: 10px;
}
.item .right > text{
  display: block;
}
.item .right > text.name{
  font-size: 14px;
}
.item .right > text.price{
  font-size: 12px;
  color: var(--weui-FG-2);
}