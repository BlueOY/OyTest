/* miniprogram/pages/user/orderList/orderList.wxss */
#top{
  margin-bottom: 10px;
}
.weui-flex{
  text-align: center;
}
.weui-flex .text{
  display: inline-block;
  padding: 3px 0;
  font-size: 14px;
}
.weui-flex .text.active{
  color: #FB760F;
  border-bottom: 1px solid #FB760F;
}

.list{
}
.nodata{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%); */
  transform: translate(-50%, -100%);
  
  text-align: center;
}
.nodata image{
  width: 60px;
}
.nodata text{
  display: block;
  font-size: 12px;
  color: #8a8a8a;
}
.loading{
  text-align: center;
  padding-top: 10px;
  padding-bottom: 15px;
  font-size: 14px;
  color: #8a8a8a;
}
.list .item{
  background: white;
  padding: 10px;
}
.list .item:not(:last-child){
  margin-bottom: 5px;
}
.list .item image{
  width: 40px;
  margin: 3px;
  vertical-align: top;
}
.list .item .info{
  display: inline-block;
  vertical-align: top;
  margin-left: 10px;
  width: calc(100% - 46px - 10px);
}
.list .item .info > view{
  display: block;
}
.list .item .info .bottom{
  font-size: 12px;
}
.list .item .info .right{
  float: right;
}
.list .item .foot{
  text-align: right;
  font-size: 0;
}
.list .item .foot button{
  padding: 3px 7px;
  width: auto;
  min-height: auto;
  display: inline-block;
  font-size: 14px;
  background: white;
  border: 1px solid #FB760F;
  color: #FB760F;
}