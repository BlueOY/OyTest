/* miniprogram/pages/user/about/feedbackList/feedbackList.wxss */
.nodata{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%); */
  transform: translate(-50%, -100%);
  
  text-align: center;
}
.nodata image{
  width: 60px;
}
.nodata text{
  display: block;
  font-size: 12px;
  color: #8a8a8a;
}
.loading{
  text-align: center;
  padding-top: 10px;
  padding-bottom: 15px;
  font-size: 14px;
  color: #8a8a8a;
}

.list{
}
.list .item{
  background: white;
  padding: 10px;
}
.list .item:not(:last-child){
  margin-bottom: 5px;
}
.list .item .info{
  display: inline-block;
  vertical-align: top;
  margin-left: 10px;
  width: calc(100% - 10px - 10px);
}
.list .item .info > view{
  display: block;
}
.list .item .info .bottom{
  font-size: 12px;
}
.list .item .info .right{
  float: right;
}