<!--miniprogram/pages/home/productList/productList.wxml-->
<view id="searchbar-box" class="searchbar-box">
	<view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
		<form class="weui-search-bar__form">
			<view class="weui-search-bar__box">
				<i class="weui-icon-search"></i>
				<input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
				<span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
				</span>
			</view>
			<label class="weui-search-bar__label" bindtap="showInput">
				<i class="weui-icon-search"></i>
				<span class="weui-search-bar__text">搜索</span>
			</label>
		</form>
		<view class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
	</view>
  <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
			<view class="weui-cell weui-cell_active weui-cell_access">
				<view class="weui-cell__bd weui-cell_primary">
					<view>实时搜索文本</view>
				</view>
			</view>
			<view class="weui-cell weui-cell_active weui-cell_access">
				<view class="weui-cell__bd weui-cell_primary">
					<view>实时搜索文本</view>
				</view>
			</view>
			<view class="weui-cell weui-cell_active weui-cell_access">
				<view class="weui-cell__bd weui-cell_primary">
					<view>实时搜索文本</view>
				</view>
			</view>
			<view class="weui-cell weui-cell_active weui-cell_access">
				<view class="weui-cell__bd weui-cell_primary">
					<view>实时搜索文本</view>
				</view>
			</view>
		</view>
</view>
<view class="content">
  <scroll-view class="left" scroll-y="true" style="height: {{scrollViewHeight}}px;">
    <block wx:for="{{14}}" wx:for-index="idx">
      <view class="{{idx==0?'active':''}}">
        副食品
      </view>
    </block>
  </scroll-view>
  <scroll-view class="right" scroll-y="true" style="height: {{scrollViewHeight}}px;">
    <block wx:for="{{3}}">
      <view class="item">
        <image src="../../../images/home/test.jpg" mode="widthFix"></image>
        <view>
          <text>零食</text>
          <text>￥0.01</text>
        </view>
        <view class="num-box">
          <text class="symbols">－</text>
          <text class="num">1</text>
          <text class="symbols">＋</text>
        </view>
      </view>
    </block>
  </scroll-view>
</view>