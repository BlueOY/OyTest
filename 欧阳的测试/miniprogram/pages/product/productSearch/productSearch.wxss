/* miniprogram/pages/product/productSearch/productSearch.wxss */
.nodata{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%); */
  transform: translate(-50%, -100%);
  
  text-align: center;
}
.nodata image{
  width: 60px;
}
.nodata text{
  display: block;
  font-size: 12px;
  color: #8a8a8a;
}
.item{
  padding: 10px;
  position: relative;
}
.item image{
  width: 50px;
  vertical-align: top;
}
.item > view{
  display: inline-block;
  vertical-align: top;
  margin-left: 10px;
}
.item > view > text{
  display: block;
}
.item .num-box{
  position: absolute;
  right: 10px;
  bottom: 10px;
}
.item .num-box text{
  display: inline-block;
  color: #ccc;
  font-size: 14px;
}
.item .num-box .symbols{
  padding: 0px 3px;
  border: 0.5px solid #ccc;
}
.item .num-box .num{
  padding: 0px 10px;
  border-top: 0.5px solid #ccc;
  border-bottom: 0.5px solid #ccc;
}